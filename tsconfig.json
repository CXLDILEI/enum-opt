{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "rootDir": "./src",
    "removeComments": false,
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ],
  "exclude": ["./src/types/*"]
}
