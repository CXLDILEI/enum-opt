{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "rootDir": ".",
    "removeComments": false,
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./types/*"
  ]
}
